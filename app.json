{
  "name": "casa",
  "description": "Flat listings tracker",
  "scripts": {
    "postdeploy": "rake db:schema:load && rake db:seed && rake pull_listings"
  },
  "env": {
    "ALL_FLATS_LISTINGS": {
      "required": true
    },
    "ALL_FLOORPLANS": {
      "required": true
    },
    "APP_DOMAIN": {
      "required": true
    },
    "JASPER_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "NEMA_URL": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "WEB_CONCURRENCY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
