<script type="text/javascript">
  var linkData = {
    data: {
    'identifier': <%= @flat.id %>,
    'floor': <%= @flat.floor.to_i %>,
    'stack': '<%= @flat.stack %>',
    'bedroom': <%= @flat.bed %>,
    'bathroom': <%= @flat.bath %>,
    'square-feet': <%= @flat.sqft %>,
    'is-active': <%= @flat.is_active %>,
    <% unless @flat.city_view.blank? %>
      'city-view': '<%= @flat.city_view.nil? %>',
    <% end %>
    'floor-plan': '<%= @flat.layout_path %>',
    'listings': [
    <% @flat.listings.each do |listing| %>
    {
      'price': <%= listing.price %>,
      'created-at': "<%= listing.created_at %>"
    },
    <% end %>
    ]
  }
};

branch.link(linkData, function(err, link) {
  // attach deep link
  document.getElementById('anchor').href = link || err;
});
</script>
