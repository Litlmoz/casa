<% heading @listing.flat.name %>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@listing.price, precision: 0) %>
</p>


<%= link_to 'Back to Listings', flat_listings_path(@listing.flat), class:'btn btn-block btn-default' %>

<%= link_to edit_flat_listing_path(@listing.flat, @listing), class: 'btn btn-block btn-primary' do %>
  <span class='glyphicon glyphicon-pencil'></span>
<% end %>
