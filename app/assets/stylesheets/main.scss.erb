@import 'bootstrap/variables';

.alert-notice {
  @extend .alert-success;
}

.alert-alert {
  @extend .alert-danger;
}

img {
  @extend .img-responsive;
}

.validation-error {
  margin-top: 2px;
  color: $brand-danger;
  font-size: $font-size-small;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

body {
  padding-top: 50px;
}

.page-header {
  background-color: #FCC;
  margin-top: 0;
  padding: 15px;
}

.navbar-brand {
  min-width: 50px;
  padding: 8px;
}

.inactive {
  background: #EEE;
  color: #CECECE;
}

table {
  th {
    text-align: center;
  }
  td {
    text-align: center;
  }
}

// Rent History Chart
.rents-chart {
  padding: 20px 0;
}

#chart-0.chart {
  width: 100%;
  max-width: 620px;
}
